<h1>Editing Book</h1>

<div class="flash">
  <%= flash.now[:alert] %>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="field">
    <%= f.submit 'Update Book' %>
  </div>
  
<% end %>

<%= link_to "Show", book_path(@book.id) %>
  |
<%= link_to "Back", books_path %>
